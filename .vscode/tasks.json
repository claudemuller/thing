				"debug-build"
			],
			"env": {
				"PLATFORM": "sdl"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$g++"
			],
			"detail": "Compiles the project and outputs to /bin."
